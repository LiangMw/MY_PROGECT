<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_e3"
              android:orientation="vertical">
    <!--path-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/file_category_tv_path"
            style="@style/WY.Theme.TextAppearance.Common.SingleLine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColor="@color/wy.text.common_h2"
            android:textSize="12sp"
            tools:text="存储卡:/"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/wy.divider.narrow"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/file_category_tv_back_last"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_file_back"
            android:gravity="center"
            android:text="上一级"
            android:textColor="@color/wy.text.common_h2"
            android:textSize="12sp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_file_category"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v7.widget.RecyclerView>

    <!--文件点击按钮-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/file_system_cb_selected_all"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:button="@drawable/selector_cb_file"
            android:text="全选"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="@color/selector_cb_file"/>

        <com.integrate.mingweidev.widget.theme.ColorButton
            android:id="@+id/file_system_btn_add_book"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:minWidth="110dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_btn_add"
            android:textColor="@color/selector_btn_file_add"
            android:text="选择" />

        <Button
            android:id="@+id/file_system_btn_delete"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_btn_delete"
            android:textColor="@color/selector_btn_file_delete"
            android:layout_toLeftOf="@id/file_system_btn_add_book"
            android:text="删除"/>
    </RelativeLayout>

</LinearLayout>